set field:
	type: info
	name: Set Information
set field:
	type: text
	name: credit
	default: "card by"
set field:
	type: text
	name: description
	multi line: true
set field:
	type: text
	name: artist
	default: "art by"
	
card field:
	type: text
	name: artist
	default: set.artist
	show statistics: false
	editable: true
card field:
	type: text
	name: credit
	default: set.credit
	show statistics: false
	editable: true

card field:
	type: text
	name: name
	description: The name of the card.

card field:
	type: image
	name: image
	description: The card's image.


card field:
	type: text
	name: rulestext
	multi line: true
	description: Rules text.

card field:
	type: text
	name: flavortext
	multi line: true
	description: Flavor text.
	
card field:
	type: choice
	editable: true
	name: souls
	description: The number of souls this card has.
	choice: nosoul
	choice: 1soul
	choice: 2soul
	choice: 3soul
	initial: nosoul
	
card field:
	type: text
	name: charahp
	multi line: false
	description: Character starting HP value.
	
card field:
	type: text
	name: charaatk
	multi line: false
	description: Character starting ATK value.

card field:
	type: text
	name: charadice
	multi line: false
	description: Character starting DICE value.

auto replace:
	match: t:
	replace: <sym>t</sym>
	
	match: p:
	replace: <sym>p</sym>
	
	match: -color
	replace: <color:rgb(102,102,102)>colored text</color>
